# Production Environment Variables
# Copy this to .env.production and fill in values

# Database
DATABASE_URL=postgresql://zyndra:PASSWORD@postgres:5432/zyndra?sslmode=disable
POSTGRES_DB=zyndra
POSTGRES_USER=zyndra
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Backend
BASE_URL=https://api.zyndra.armonika.cloud
PORT=8080
DISABLE_AUTH=true

# Frontend
NEXT_PUBLIC_API_URL=https://api.zyndra.armonika.cloud

# Registry (Harbor/Docker Hub)
REGISTRY_URL=https://registry.example.com
REGISTRY_USERNAME=username
REGISTRY_PASSWORD=password

# Security
WEBHOOK_SECRET=GENERATE_RANDOM_SECRET_HERE
CORS_ORIGINS=https://zyndra.armonika.cloud

# Infrastructure
USE_MOCK_INFRA=true

# OpenStack (when ready)
# INFRA_SERVICE_URL=https://openstack-api.example.com
# INFRA_SERVICE_API_KEY=api_key_here

# Optional: Casdoor (when enabling real auth)
# CASDOOR_ENDPOINT=https://casdoor.example.com
# CASDOOR_CLIENT_ID=client_id
# CASDOOR_CLIENT_SECRET=client_secret

